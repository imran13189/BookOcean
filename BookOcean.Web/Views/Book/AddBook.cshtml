@model BookOcean.Domain.Book



<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Advanced Form validations
                <span class="tools pull-right">
                    <a class="fa fa-chevron-down" href="javascript:;"></a>
                    <a class="fa fa-cog" href="javascript:;"></a>
                    <a class="fa fa-times" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                <div class="form">

                    @using (Html.BeginForm("AddBooks", "Book", FormMethod.Post, new {@class="cmxform form-horizontal" , @id = "signupForm" }))
                    {
                    
                        <div class="form-group ">
                            <label for="firstname" class="control-label col-lg-3">BookName</label>
                            <div class="col-lg-6">

                                @Html.TextBoxFor(x=>x.BookName, new{@class= " form-control", @id = "firstname", @name="firstname" })
                                @Html.ValidationMessageFor(x=>x.BookName)
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-3">Publication</label>
                            <div class="col-lg-6">

                                @Html.TextBoxFor(x=>x.Publication,new { @class= " form-control" ,@id = "lastname", @name="Lastname" })
                                @Html.ValidationMessageFor(x => x.Publication)
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="username" class="control-label col-lg-3">Edition</label>
                            <div class="col-lg-6">

                                @Html.TextBoxFor(x => x.Edition, new { @class = " form-control", @id = "lastname", @name = "Lastname" })
                                @Html.ValidationMessageFor(x => x.Edition)
                            </div>
                        </div>
                        
                    }
                </div>
            </div>
        </section>
    </div>
</div>