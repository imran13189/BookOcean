                                @Html.ValidationMessageFor(x=>x.BookName)
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="lastname" class="control-label col-lg-3">Publication</label>
                            <div class="col-lg-6">

                                @Html.TextBoxFor(x=>x.Publication,new { @class= " form-control" ,@id = "lastname", @name="Lastname" })
                                @Html.ValidationMessageFor(x => x.Publication)
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="username" class="control-label col-lg-3">Edition</label>
                            <div class="col-lg-6">

                                @Html.TextBoxFor(x => x.Edition, new { @class = " form-control", @id = "lastname", @name = "Lastname" })
                                @Html.ValidationMessageFor(x => x.Edition)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-6">
